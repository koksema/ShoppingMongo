@model ShoppingMongo.Dtos.ProductImageDtos.GetProductImageDto
@{
    ViewData["Title"] = "UpdateProductImage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Ürün Resmi Güncelle</h1>
<div class="container">
    <br /><br />
    <form method="post">
        <input type="hidden" asp-for="ProductImageId" />
        <label>Resim</label>
        <div class="mb-3">
            <input type="text" class="form-control" placeholder="Stok" asp-for="ProductImageUrl">
        </div>
        <br />
        <select asp-for="ProductId" class="form-control" asp-items="ViewBag.v">
            <option value="">Seç</option>
        </select>
        <br />
        <button class="btn btn-primary form-control">Güncelle</button>
    </form>
</div>
