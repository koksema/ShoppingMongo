@model ShoppingMongo.Dtos.CategoryDtos.GetCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Kategori Güncelle</h1>

<div class="container">
    <br /><br />
    <form method="post">
        <input type="hidden" asp-for="CategoryId" />
        <label>Kategori Adı</label>
        <div class="mb-3">
            <input type="text" class="form-control" placeholder="Kategori Adı" asp-for="CategoryName">
        </div>
        <br />
        <label>Resim</label>
        <div class="mb-3">
            <input type="text" class="form-control" placeholder="Resim" asp-for="CategoryImageUrl">
        </div>
        <br />
        <button class="btn btn-primary form-control">Güncelle</button>
    </form>
</div>
