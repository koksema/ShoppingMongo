@model List<ShoppingMongo.Dtos.ProductDtos.ResultProductDto>

@{
    ViewData["Title"] = "ProductList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}


<h1>Ürünler</h1>

<div class="container">
    <br /><br />
    <table class="table table-bordered">
        <tr>
            <th class="text-center">#</th>
            <th class="text-center">Kategori Adı</th>
            <th class="text-center">Resim</th>
            <th class="text-center">Cinsiyet</th>
            <th class="text-center">Açıklama</th>
            <th class="text-center">Ürün Fiyatı</th>
            <th class="text-center">Durum</th>
            <th class="text-center">Stok Sayısı</th>
            <th class="text-center">Kategori</th>
            <th class="text-center">Sil</th>
            <th class="text-center">Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th class="text-center">@count</th>
                <th class="text-center">@item.ProductName</th>
                <th class="text-center">@item.ProductImage</th>
                <th class="text-center">@item.Gender</th>
                <th class="text-center">@item.Description</th>
                <th class="text-center">@item.ProductPrice</th>
                <th class="text-center">@item.Status</th>
                <th class="text-center">@item.StockCount</th>
                <th class="text-center">@item.CategoryId</th>
                <td><a href="/Product/DeleteProduct/@item.ProductId" class=" btn btn-danger form-control">Sil</a></td>
                <td><a href="/Product/UpdateProduct/@item.ProductId" class=" btn btn-info form-control">Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="/Product/CreateProduct/" class="btn btn-primary form-control">Yeni Ürün Ekle</a>
</div>